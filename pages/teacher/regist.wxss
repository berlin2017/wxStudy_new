/* pages/teacher/main.wxss */
@import '../common/title.wxss';

.top_image{
  width: 100%;
  height: 240px;
  background: #b7c5d6;
}

.item_layout{
  width: 94%;
  margin-left: 2%;
  border-bottom: 1px solid gainsboro;
  height: 40px;
  float:left;
  padding-left:2%;
}

.item_name{
  float: left;
  line-height: 40px;
  text-align: left;
  width: 30%;
  color: gray;
}

.item_right{
  height: 40px;
  float: right;
  width: 60%;
  text-align: right;
  color: black;
}

.item_right_input{
  height: 40px;
}

.item_value{
  float: right;
  margin-right: 10px;
  line-height: 40px;
  text-align: center;
}

.item_arrow{
  width: 16px;
  height: 16px;
  float: right;
  margin-right: 10px;
  margin-top: 12px;
}

.bottom_layout{
  width: 100%;
  position: fixed;
  left: 0px;
  bottom: 0px;
  height: 40px;
  background: #7647a0;
  color: white;
  line-height: 40px;
  text-align: center;
  z-index: 1000000;
}

.form_textarea{
  background: gainsboro;
  margin-top: 10px;
  height:120px;
  width: 92%;
  padding: 2%;
  margin-left: 2%;
	text-align:left;
  float: left;
}