/* pages/main/main2.wxss */

.main_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 0;
  overflow: hidden;
}

.title {
  color: gray;
  letter-spacing: 5px;
  font-size: 17px;
  padding-top: 200rpx;
  padding-bottom: 100rpx;
}

.left {
  float: left;
  width: 50%;
  padding-left: 40px;
  padding-right: 20px;
  box-sizing: border-box;
  background-clip: content-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.right {
  float: left;
  width: 50%;
  padding-right: 40px;
  padding-left: 20px;
  box-sizing: border-box;
  background-clip: content-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.roler_image {
  width: 100%;
  margin-bottom: 20px;
}

.btn {
  display: flex;
  color: white;
  height: 100px;
  width: 100px;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background: #268746;
  border: 2px solid;
  border-radius: 10px;
}

.btn2 {
  display: flex;
  color: white;
  height: 100px;
  width: 100px;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background: #7647a0;
  border: 2px solid;
  border-radius: 10px;
}

.name {
  color: white;
  letter-spacing: 5px;
  font-size: 30px;
}
