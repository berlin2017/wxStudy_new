@import '../common/title.wxss';

.type {
  padding: 2px 8px;
  color: #7647a0;
  margin-left: 10px;
  border: 1px solid transparent;
}

.type_checked {
  margin-left: 10px;
  padding: 2px 8px;
  color: #7647a0;
  border: 1px solid #7647a0;
}

.weui-search-bar {
  flex: 1;
}

.item_image {
  width: 60px;
  height: 60px;
  border-radius: 30px;
}

.item_name {
  margin-top: 10px;
  font-size: 19px;
  font-weight: bold;
  line-height: 30px;
  text-align: center;
}

.item_subject {
  margin-top: 10px;
  font-size: 15px;
  color: gray;
  line-height: 20px;
  text-align: center;
}

.item_layout {
  float: left;
  width: 50%;
}
