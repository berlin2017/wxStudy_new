/* pages/student/userInfo.wxss */

@import "../common/title.wxss";

.userinfo_header{
  width: 100%;
  height: 240px;
}

.item_layout{
  width: 94%;
  margin-left: auto;
  margin-right: auto;
  border-bottom: 1px solid gainsboro;
  height: 40px;
}

.item_name{
  float: left;
  line-height: 40px;
  text-align: center;
  color: gray;
}

.item_right{
  height: 40px;
  float: right;
  text-align: right;
  color: black;
}

.item_value{
  float: right;
  margin-right: 10px;
  line-height: 40px;
  text-align: center;
}

.item_arrow{
  width: 16px;
  height: 16px;
  float: right;
  margin-right: 10px;
  margin-top: 12px;
}

.bottom_layout{
  width: 100%;
  height: 40px;
  background: #268746;
  color: white;
  margin-top: 40px;
  line-height: 40px;
  text-align: center;
  position: absolute;
  bottom: 0px;
}