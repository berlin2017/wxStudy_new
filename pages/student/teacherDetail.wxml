    <view class='comment_item' wx:for='{{comments.data}}'>

      <view class='comment_top_layout'>

        <image src='{{item.pic}}' class='comment_item_image' mode='scaleToFill' wx:if='{{item.pic}}'></image>

        <view style='display:flex;flex-direction: column;'>

          <view class='comment_item_name'>{{item.student_name}}</view>

          <view class='comment_item_time' wx:if='{{item.time}}'>{{item.time}}</view>

        </view>

        <view class="rating_layout" bindtap="myStarChoose" style='margin-right:0px;line-height:60px;height:60px;position:absolute;right:0px;'>

          <block wx:for="{{starMap}}" wx:for-item="itemName">

            <text wx:if="{{item.score/2>=index+1}}" style="padding-right: .5em" class="zan-c-green" data-star="{{index+1}}">★</text>
            <text wx:if="{{item.score/2<index+1}}" style="padding-right: .5em" class="zan-c-gray-dark" data-star="{{index+1}}">☆</text>
          </block>
        </view>

      </view>

      <view class='comment_item_content'>{{item.comment}}</view>


    </view>

