/* pages/student/search.wxss */
@import '../common/title.wxss';

.item_layout {
  width: 100%;
  height: 160rpx;
  border-bottom: 1px solid gainsboro;
  overflow: hidden;
}

.item_image {
  float: left;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin: 20rpx;
}

.item_text {
  float: left;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  width: 570rpx;
}

.item_name {
  font-size: 17px;
  line-height: 20px;
}

.item_info {
  height: 20px;
  margin-top: 5px;
  color: gray;
  font-size: 13px;
  line-height: 20px;
  overflow: hidden;
}
