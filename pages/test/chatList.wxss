/* pages/test/chatList.wxss */
@import '../common/title.wxss';

.recentchat-wrapper {
  width: 100%;
  padding: 0 20rpx; 
  box-sizing:border-box;
  background-color: #fff;
  min-height: 100%;
  overflow-x: hidden;
  overflow-y: scroll;
}

.recentchat-wrapper:first-child {
  border-top: 1px solid rgba(220,220,220,0.5);
}
.no-recent {
  width:100%;
  position: fixed;
  top: 20%;
  color: #ccc;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  margin-left: -20rpx;
}
.no-recent-image {
  width:550rpx;
  height:200rpx;
  margin-bottom:40rpx;
}
.no-recent-text {
  width:100%;
  text-align:center;
}

.recentchat-item-img {
  width: 88rpx;
  height: 88rpx;
  margin-right: 24rpx;
  box-sizing: border-box;
  display: flex;
  align-self: center;
  border-radius: 100%;
}

/* 循环列表条目样式 */
.recentchat-item {
  width:100%;
  height:128rpx;
  padding:20rpx 28rpx 20rpx 0;
  box-sizing:border-box;
  display:flex;
  border-bottom: 1px solid rgba(220,220,220,0.5);
}

.recentchat-item-right {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: space-around;
}
.recentchat-item-top {
  align-self:flex-start;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  width:100%;
  height:44rpx;
  line-height:44rpx;
}

.recentchat-item-top .recentchat-item-title {
  font-size: 32rpx;
}
.recentchat-item-top .recentchat-item-time {
  font-size: 28rpx;
  color: #ccc;
}

.recentchat-item-unread {
  background-color:red;
  border-radius:100%;
  width:40rpx;
  text-align:center;
  color:#fff;
}