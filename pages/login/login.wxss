/* pages/loading/loading.wxss */

.common_title_layout{
  width: 100%;
  height: 64px;
  display: flex;
  /* float: top; */
  /* position: fixed; */
  /* top: 0px;
  left: 0px; */
  z-index: 1000000;
  background: #7647a0;
}

.back_text{
  background: none;
  margin-left: 10px;
  margin-top: 20px;
  line-height: 44px;
  font-size: 15px;
  text-align: center;
  color: white;
}

.back{
  width: 24px;
  height: 24px;
  margin-left: 10px;
  margin-top: 30px;
}

.title{
  color: white;
  width: 100%;
  text-align: center;
  font-size: 19px;
  margin-top: 20px;
  line-height: 44px;
  margin-left: 10px;
  margin-right: 44px;
}


.login_container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.app {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.icon {
  width: 50px;
  height: 50px;
  margin-top: 50px;
  border-radius: 10px;
}

.app_name {
  font-size: 14px;
  color: black;
  margin-top: 10px;
}

.app_company {
  font-size: 10px;
  color: grey;
  margin-top: 10px;
}

.info {
  margin-top: 50px;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-direction: column;
}

.btn {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40px;
  display: flex;
  flex-direction: row;
}

.cancel {
  height: 40px;
  line-height: 40px;
  background-color: grey;
  color: white;
  width: 45%;
  border-radius: 20px;
}

.confirm {
  border-radius: 20px;
  height: 40px;
  line-height: 40px;
  background-color: #009843;
  color: white;
  width: 45%;
}
